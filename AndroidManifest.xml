<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="illinois.sweng.sctracker"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:label="@string/app_name"
            android:name=".SC2TrackerActivity" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:label="@string/registerActivity"
            android:name="RegisterActivity" >
        </activity>
        <activity
            android:label="@string/unregisterActivity"
            android:name="UnregisterActivity" >
        </activity>
        <activity
            android:name="HomeActivity" 
            android:label="@string/homeActivity" >
            <meta-data
                android:name="android.app.default_searchable"
                android:value="SearchActivity" />
        </activity>
        <activity 
            android:name="SearchActivity" >
            <intent-filter >
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity android:name="PlayerStatusActivity"></activity>
       
    </application>

</manifest>